{
  "compilerOptions": {
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es5", "es6", "dom"],
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "resolve": {
    "fallback": {
      "stream": "stream-browserify",
      "http": "stream-http",
      "https": "https-browserify",
      "os": "os-browserify/browser",
      "path": "path-browserify",
      "buffer": "buffer/"
    }
  }
}
